up:
	@echo "ğŸš€ Starting all services in the background..."
	docker-compose up -d --build

down:
	@echo "ğŸ›‘ Stopping and removing all services..."
	docker-compose down -v

build:
	@echo "ğŸ› ï¸  Building custom images (worker, vote, result)..."
	docker-compose build

logs:
	@echo "ğŸ“œ Tailing logs from all services..."
	docker-compose logs -f

